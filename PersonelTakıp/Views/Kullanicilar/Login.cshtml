
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Logın/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Logın/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Logın/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Logın/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/Logın/css/style.css">
    <title>Login #9</title>
</head>
<body>


    <div class="content">
        <div class="container">
            <div class="row justify-content-center">
                <!-- <div class="col-md-6 order-md-2">
                  <img src="~/Logın/images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
                </div> -->
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div class="form-block">
                                <div class="mb-4">
                                    <h3>Giriş yap </h3>
                                </div>
                                <form action="#" method="post">
                                    <div class="form-group first">
                                        <label for="username">Kullanıcı Adı</label>
                                        <input type="text" class="form-control" id="username" name="KullaniciAdi">
                                    </div>
                                    <div class="form-group last mb-4">
                                        <label for="password">Şifre</label>
                                        <input type="password" class="form-control" id="Sifre" name="Sifre">

                                    </div>

                                    <div class="d-flex mb-5 align-items-center">
                                        <label class="control control--checkbox mb-0">
                                            <span class="caption">Beni Hatırla</span>
                                            <input type="checkbox" checked="checked" />
                                            <div class="control__indicator"></div>
                                        </label>
                                        <span class="ml-auto"><a href="~/Logın/#" class="forgot-pass">Şifremi Unuttum</a></span>
                                    </div>
                                    <input type="submit" value="Giriş Yap" class="btn btn-pill text-white btn-block btn-primary">
                                    <br />
                                    <a class="txt2" href="/Kullanicilar/Kaydol/">Kayıt ol</a>
                                    <div class="container">

                                        @if(ViewBag.hata!=null)
                                        {

                                            <p>@ViewBag.hata</p>
                                        }


                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <script src="~/Logın/js/jquery-3.3.1.min.js"></script>
    <script src="~/Logın/js/popper.min.js"></script>
    <script src="~/Logın/js/bootstrap.min.js"></script>
    <script src="~/Logın/js/main.js"></script>
</body>
</html>